define("waimai:widget/usercenter/order/commonDialog",function(require,exports,module){var msgDialogTpl=[function(_template_object){var _template_fun_array=[],fn=function(__data__){var _template_varName="";for(var name in __data__)_template_varName+="var "+name+'=__data__["'+name+'"];';eval(_template_varName),_template_fun_array.push('<div class="msg-dialog"><div class="msg-bd">加载中...</div><div class="actions"><button class="ok" data-node="ok-btn">确定</button><button class="cancel" data-node="cancel-btn">取消</button></div></div>'),_template_varName=null}(_template_object);return fn=null,_template_fun_array.join("")}][0];module.exports={dialog:null,dfd:null,okBtn:null,cancelBtn:null,init:function(e){var a=this;return e.reset(),a.dialog=new e({html:msgDialogTpl()}),a.bindEvent(),a.okBtn=a.dialog.getElement().find(".ok"),a.cancelBtn=a.dialog.getElement().find("cancel"),a},bindEvent:function(){var e=this,a=e.dialog,t=a.getElement();t.on("click","[data-node='ok-btn'],[data-node='cancel-btn']",function(n){var l=$(n.currentTarget),d={hide:!0};t.find(".msg-dialog").hasClass("confirm")&&("ok-btn"==l.data("node")?e.dfd.resolve(d):e.dfd.reject(d)),d.hide&&a.hide({fade:!0})})},_show:function(e){var a=this,t=a.dialog,n=t.getElement();n.find(".msg-bd").html(e),a.okBtn.removeClass("disable"),t.show({fade:!0})},alert:function(e){this.dialog.getElement().find(".msg-dialog").removeClass("confirm"),this._show(e)},confirm:function(e){var a=this;return a.dfd=$.Deferred(),a.dialog.getElement().find(".msg-dialog").addClass("confirm"),a._show(e),a.dfd}}});